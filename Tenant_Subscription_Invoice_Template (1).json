{
  "templateCode": "INVOICE_TEMPLATE",
  "description": "Invoice PDF Template",
  "templateContent": "<html>\n<head>\n    <style>\n        body {\n            font-family: Helvetica, Arial, sans-serif;\n            font-size: 14px;\n            color: #333;\n            margin: 40px;\n        }\n        .header { margin-bottom: 40px; }\n        .logo { width: 180px; margin-bottom: 25px; }\n        .invoice-title { font-size: 24px; font-weight: bold; margin-bottom: 20px; }\n        .meta-label { color: #666; font-size: 12px; margin-bottom: 2px; }\n        .meta-value { font-weight: bold; margin-bottom: 12px; }\n        .bill-to { margin-top: 30px; margin-bottom: 30px; }\n        .bill-label { color: #666; font-size: 12px; font-weight: bold; margin-bottom: 5px; }\n        table { width: 100%; border-collapse: collapse; margin-top: 20px; }\n        th { text-align: left; color: #666; font-size: 12px; border-bottom: 1px solid #ddd; padding: 8px 0; }\n        td { padding: 10px 0; border-bottom: 1px solid #eee; vertical-align: top; }\n        .text-right { text-align: right; }\n        .totals { margin-top: 30px; width: 40%; float: right; }\n        .totals td { border: none; padding: 6px 0; }\n        .total-row { font-size: 16px; font-weight: bold; border-top: 2px solid #333; padding-top: 10px; }\n        .footer { margin-top: 60px; font-size: 10px; color: #999; text-align: center; clear: both; }\n    </style>\n</head>\n<body>\n\n    <div class=\"header\">\n        <img src=\"$!logoUrl\" class=\"logo\"/>\n        <div class=\"invoice-title\">Invoice</div>\n\n        <div class=\"meta-label\">Invoice number</div>\n        <div class=\"meta-value\">$!order.invoiceNumber</div>\n\n        <div class=\"meta-label\">Date of issue</div>\n        <div class=\"meta-value\">$!order.dateOfIssue</div>\n\n        <div class=\"meta-label\">Date due</div>\n        <div class=\"meta-value\">$!order.dateDue</div>\n    </div>\n\n    <div class=\"bill-to\">\n        <div class=\"bill-label\">Bill to</div>\n        <div>$!order.customerEmail</div>\n        #if($order.customerState)\n            <div>$!order.customerState</div>\n        #end\n        <div>$!order.customerCountry</div>\n        #if($order.customerZip)\n            <div>$!order.customerZip</div>\n        #end\n    </div>\n\n    <div style=\"margin-bottom: 20px;\">\n        <strong>$!order.currency $!order.totalAmount due $!order.dateDue</strong>\n    </div>\n\n    <table>\n        <thead>\n            <tr>\n                <th width=\"50%\">Description</th>\n                <th width=\"10%\">Qty</th>\n                <th width=\"20%\">Tax</th>\n                <th width=\"20%\" class=\"text-right\">Amount</th>\n            </tr>\n        </thead>\n        <tbody>\n            #foreach($item in $order.lineItems)\n            <tr>\n                <td>\n                    <div>$!item.description</div>\n                    <div style=\"font-size: 12px; color: #666;\">$!item.period</div>\n                </td>\n                <td>$!item.qty</td>\n                <td>$!item.tax</td>\n                <td class=\"text-right\">$!order.currency $!item.amount</td>\n            </tr>\n            #end\n        </tbody>\n    </table>\n\n    <table class=\"totals\">\n        <tr>\n            <td>Subtotal</td>\n            <td class=\"text-right\">$!order.currency $!order.subTotal</td>\n        </tr>\n        <tr>\n            <td>Tax</td>\n            <td class=\"text-right\">$!order.currency $!order.taxAmount</td>\n        </tr>\n        <tr>\n            <td class=\"total-row\">Total</td>\n            <td class=\"total-row text-right\">$!order.currency $!order.totalAmount</td>\n        </tr>\n        <tr>\n            <td>Amount due</td>\n            <td class=\"text-right\"><strong>$!order.currency $!order.totalAmount</strong></td>\n        </tr>\n    </table>\n\n    <div class=\"footer\">Page 1 of 1</div>\n\n</body>\n</html>"
}